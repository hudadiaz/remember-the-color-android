<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaidhuda.rememberthecolor.fragments.GameOverFragment"
    android:id="@+id/fragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="36dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:textSize="48sp"
            android:gravity="center"
            android:paddingBottom="89dp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/duration_text"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/best_score_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/best_score_text"
            android:textSize="36sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/recent_score_text"
            android:textSize="56sp"
            android:textIsSelectable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_groups">

            <Button
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_replay_white_48dp"
                android:drawableStart="@drawable/ic_replay_white_48dp"
                android:background="@null"
                android:id="@+id/retry_button" />

            <Button
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share_white_48dp"
                android:drawableStart="@drawable/ic_share_white_48dp"
                android:background="@null"
                android:id="@+id/share_button" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
